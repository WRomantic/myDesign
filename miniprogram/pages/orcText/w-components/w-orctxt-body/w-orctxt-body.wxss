/* pages/orcText/w-components/w-orctxt-body/w-orctxt-body.wxss */

.orctbody {
  height: 100%;
  width: 100%;
  background-size: 100%;
  position: relative;
  padding: 0.4rem;
  box-sizing: border-box;
  border: 0.6rpx solid rgb(243, 243, 243);
}

.orctbodHeader {
  margin-top: 0.4rem;
  height: 2rem;
  font-size: 1.4rem;
  text-align: center;
  position: absolute;
  color: azure;
  width: 100%;
}

.orctbodyA {
  width: 100%;
  height: 80%;
  position: relative;
  z-index: 0;
  border-radius: 0.2rem;
  overflow: hidden;
  
}

.orctbodyA image {
  height: 100%;
  width: 100%;
}

.orctbodyScanTxt {
  background-color: rgba(114, 114, 114, 0.8);
  height: 11rem;
  width: 48%;
  flex-direction: column;
  padding: 0.4rem;
  border-radius: 0.3rem;
  color: rgb(255, 255, 255);
  position: absolute;
  top: 3rem;
  right: 0;
}

.orctbodyB {
  height: 20%;
  background-color: rgb(255, 255, 255);
  padding-top: 0.6rem;
}

.orctbodyScanTxt text {
  margin-top: 0.3rem;
}

.orctbodyFX {
  text-align: center;
  color: rgb(194, 194, 194);
  font-size: 0.8rem;
  margin-top: 0.4rem;
}

.orctbodyFoots {
  height: 3.6rem;
  width: 100%;
  position: absolute;
  bottom: 0;
  background-image: linear-gradient(to right, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.4) 5%, rgba(0, 0, 0, 0.6) 10%, rgba(0, 0, 0, 0.6) 90%, rgba(0, 0, 0, 0.4) 95%, rgba(0, 0, 0, 0) 100%);
  background-image: -webkit-linear-gradient(to right, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.4) 5%, rgba(0, 0, 0, 0.6) 10%, rgba(0, 0, 0, 0.6) 90%, rgba(0, 0, 0, 0.4) 95%, rgba(0, 0, 0, 0) 100%);
  color: aliceblue;
  padding: 0 1rem;
  box-sizing: border-box;
  font-size: 0.6rem;
}
